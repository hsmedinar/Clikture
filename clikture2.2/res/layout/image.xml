<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="horizontal"
	android:background="@color/white" android:layout_height="90dip">
	<ImageView android:id="@+id/image" android:layout_gravity="left|center_vertical"
		android:layout_marginLeft="20dip" android:layout_height="80dip"
		android:layout_width="80dip" android:adjustViewBounds="false"></ImageView>

	<RelativeLayout android:id="@+id/RelativeLayout01"
		android:layout_width="wrap_content" android:layout_height="fill_parent">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="30dip"
			android:text="2010/02/21 - 15:38" android:id="@+id/date"
			android:layout_marginTop="20dip"></TextView>
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="30dip"
			android:text="2010/02/21 - 15:38" android:id="@+id/gps"
			android:layout_below="@+id/date" android:layout_marginTop="10dip"></TextView>
	</RelativeLayout>
</LinearLayout>
